<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.foodject.mapper.ShopMapper">
	

	<insert id="insert" parameterType="shopVO">
		INSERT INTO shop VALUES (null, #{mid} , #{name} , #{bnum} , #{addr} , #{phon} , #{logo} , #{info} ,SYSDATE(), #{allmin} ,1)
	</insert>
	<update id="update" parameterType="shopVO">
		UPDATE shop SET name= #{name} ,addr= #{addr} ,phon= #{phon} ,logo= #{logo} ,info= #{info} ,allmin= #{allmin} WHERE id=#{id}
	</update>
	<select id="select" parameterType="Integer" resultType="shopVO">
		SELECT * FROM shop
		WHERE id=#{id}
	</select>
	<select id="selectall" resultType="shopVO">
		SELECT * FROM shop WHERE status=1
	</select>
	<update id="updateSts" parameterType="shopVO">
		UPDATE shop SET status=#{status} WHERE id=#{id} AND status=1
	</update>
	
</mapper>